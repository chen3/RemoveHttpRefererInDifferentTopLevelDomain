{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Option Page",
            "type": "shell",
            "command": "parcel",
            "args": [
                "build",
                "./src/options.html",
                "--no-source-maps"
            ],
            "group": "build"
        },
        {
            "label": "Build Background Script",
            "type": "shell",
            "command": "parcel",
            "args": [
                "build",
                "./src/background.ts",
                "--target",
                "brower",
                "--no-source-maps"
            ],
            "group": "build"
        },
        {
            "label": "Build All",
            "dependsOn": [
                "Build Background Script",
                "Build Option Page"
            ],
            "group": "build"
        },
        {
            "label": "Copy Depend File",
            "type": "shell",
            "command": "./CopyDependFiles.sh",
            "windows": {
                "command": ".\\CopyDependFiles.bat"
            }
        },
        {
            "label": "Build All And Copy Depend File",
            "dependsOn": [
                "Copy Depend File",
                "Build All"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}